/* ============================================
   PROGRESS BAR - Sleek Design
   ============================================ */
QProgressBar {
    border: none;
    border-radius: 4px;
    background-color: #e8e8e8;
    text-align: center;
    color: #2c2c2c;
    font-weight: 500;
    height: 24px;
}

QProgressBar::chunk {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #0078d7, stop:1 #00a8ff);
    border-radius: 4px;
}
